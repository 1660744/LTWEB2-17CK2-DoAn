{{/section}}
<div class="container-xl" style="margin-top: 20px;">
    {{#section 'js'}}
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.tiny.cloud/1/csk6cm5kzeqyfld4uz7wliexpudlzj01asa9t7prwni3sl2s/tinymce/5/tinymce.min.js"
        referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '#txtFullDes',
            height: 700,
            plugins: 'paste image link autolink lists table media',
            menubar: false,
            toolbar: [
                'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright | forecolor backcolor | table link image media',
            ],
        });
    </script>
    {{!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"> --}}
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.2/js/fileinput.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.2/themes/fa/theme.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.2/js/locales/vi.min.js"></script>
    <script>
        $('#fuNews').fileinput({
            browseClass: "btn btn-primary btn-block",
            browseLabel: "Chọn hình",
            showCaption: false,
            showCancel: false,
            showRemove: false,
            showUpload: false,
            showPreview: true,
            fileActionSettings: {
                showRemove: true,
                showUpload: false,
            },
            theme: 'fa',
            maxFileCount: 1,
            allowedFileExtensions: ['png', 'jpg', 'gif'],
            language: 'vi',

        });
    </script>
    {{/section}}

    <form method="post" novalidate enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h4>Biên tập bài báo</h4>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="txtHead"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Tiêu đề</label>
                    <input class="form-control form-control-lg" type="text" id="txtHead" name="Title"
                        placeholder="Tiêu đề bài báo">
                </div>
                <div class="form-group form-row">
                    <div class="col-7">
                        <label for="lbcat"><i class="fa fa-bars" aria-hidden="true"></i> Danh mục</label>
                        <select class="form-control" id="lbcat" name="CatID" size="auto">
                            {{#each cb_categories}}
                            <option value="{{CatID}}">{{CatName}}</option>
                            {{/each}}
                        </select>
                        <label for="tags" style="margin-top: 20px;"><i class="fa fa-tags" aria-hidden="true"></i> Thẻ
                            tag</label>
                        <label for="tag-typer" style="width: 100%;">
                            <div id="tags">
                                <input list="suggestionList" id="tag-typer" placeholder="Thêm tag ..." type="text"
                                    autocomplete="off" />
                                <datalist id="suggestionList">
                                    {{#each tags}}
                                    <option data-value="{{TagID}}">{{TagName}}</option>
                                    {{/each}}
                                </datalist>
                                <input type="hidden" name="answer" id="tag-typer-hidden">
                            </div>
                        </label>
                        <label for="tags" style="margin-top: 20px;"><i class="fa fa-suitcase" aria-hidden="true"></i>
                            Loại bài viết</label>
                        <div class="d-flex justify-content-around">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="NewsType" id="NewsType1" value="0"
                                    {{#if news.isPremium}}checked{{/if}}>
                                <p class="form-check-label">
                                    Bản thường
                                </p>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="NewsType" id="NewsType2" value="1"
                                    {{#if news.isPremium}}checked{{/if}}>
                                <p class="form-check-label">
                                    Bản premium
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-5">
                        <label for="fuNews" style="width: 100%;"><i class="fa fa-file-image-o" aria-hidden="true"></i>
                            Hình bìa</label>
                        <div class="file-loading">
                            <input id="fuNews" name="fuNews" type="file">
                        </div>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label for="txtTinyDes"><i class="fa fa-comments-o" aria-hidden="true"></i> Nội dung tóm
                        tắt</label>
                    <textarea class="form-control" rows="2" id="txtTinyDes" name="TinyDes"></textarea>
                </div>
                <div class="form-group">
                    <label for=""><i class="fa fa-pencil" aria-hidden="true"></i> Nội dung</label>
                    <textarea name="FullDes" id="txtFullDes" class="form-control" cols="30" rows="10"></textarea>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-lg btn-success btn-block">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    Submit
                </button>
                <button type="button" class="btn btn-lg btn-danger btn-block" onclick="history.back()">
                    <i class="fa fa-times" aria-hidden="true"></i>
                    Cancel
                </button>
            </div>
        </div>
    </form>
</div>
<script>
    document.querySelector('input[list]').addEventListener('input', function (e) {
        var input = e.target,
            list = input.getAttribute('list'),
            options = document.querySelectorAll('#' + list + ' option'),
            hiddenInput = document.getElementById(input.getAttribute('id') + '-hidden'),
            inputValue = input.value;

        hiddenInput.value = inputValue;

        for (var i = 0; i < options.length; i++) {
            var option = options[i];

            if (option.innerText === inputValue) {
                hiddenInput.value = option.getAttribute('data-value');
                break;
            }
        }
    });
</script>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script>
    $(document).ready(function () {
        $("#tag-typer").keypress(function (event) {
            var key = event.which;
            var data = $("#tag-typer-hidden").val();
            if (key == 13 || key == 44) {
                event.preventDefault();
                var tag = $(this).val();

                const isBlank = $.trim(tag);
                if (tag.length > 0 && isBlank != '') {
                    if (isNaN(data)) {
                        $("<span class='tag''><span class='close-tag'>&times;</span>" +
                            tag + " <input type='hidden' name='newtags[]' value='" + tag + "'>" +
                            " </span>").insertBefore(this);
                        $(this).val("");
                    } else {
                        $("<span class='tag''><span class='close-tag'>&times;</span>" +
                            tag + " <input type='hidden' name='tags[]' value='" + data + "'>" +
                            " </span>").insertBefore(this);
                        $(this).val("");
                    }

                } else
                    $(this).val("");
            }
        });

        $("#tags").on("click", ".close-tag", function () {
            $(this).parent("span").remove();
        });
    });
</script>
