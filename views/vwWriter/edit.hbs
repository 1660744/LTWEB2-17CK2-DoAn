{{#section 'css'}}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.9/css/fileinput.min.css">
{{/section}}
<div class="container-xl" style="margin-top: 20px;">
    {{#section 'js'}}
    <script src="https://cdn.tiny.cloud/1/csk6cm5kzeqyfld4uz7wliexpudlzj01asa9t7prwni3sl2s/tinymce/5/tinymce.min.js"
        referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '#txtFullDes',
            height: 700,
            plugins: 'paste image link autolink lists table media',
            menubar: false,
            toolbar: [
                'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright | forecolor backcolor | table link image media',
            ],
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.9/js/fileinput.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.9/themes/fa/theme.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.9/js/locales/vi.min.js"></script>
    <script>
        $('#fuNews').fileinput({
            uploadUrl: "/file-upload-single/1",
            maxFileCount: 1,
            autoReplace: true,
            theme: 'fa',
            showCaption: false,
            showRemove: false,
            showUpload: false
            dropZoneEnabled: true,
            layoutTemplates: {
                main1: "{preview}\n" +
                    "<div class=\'input-group {class}\'>\n" +
                    "   <div class=\'input-group-btn\ input-group-prepend'>\n" +
                    "       {browse}\n" +
                    "       {upload}\n" +
                    "       {remove}\n" +
                    "   </div>\n" +
                    "   {caption}\n" +
                    "</div>"
            },
            allowedFileExtensions: ['png', 'jpg', 'gif'],
            /*previewFileType: "image",
            browseClass: "btn btn-success float-right",
            browseLabel: "Pick Image",
            browseIcon: "<i class=\"glyphicon glyphicon-picture\"></i> ",
            removeClass: "btn btn-danger", */

            // removeLabel: "Delete",
            // removeIcon: "<i class=\"glyphicon glyphicon-trash\"></i> ",
            // uploadClass: "btn btn-info",
            // uploadLabel: "Upload",
            // uploadIcon: "<i class=\"glyphicon glyphicon-upload\"></i> "
        });
    </script>
    {{/section}}

    <form method="post" novalidate enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Biên tập bài báo</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" value="{{news.NewsID}}">
                <div class="form-group">
                    <label for="txtHead"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Tiêu đề</label>
                    <input class="form-control form-control-lg" type="text" id="txtHead" name="Title"
                        value="{{news.Title}}" placeholder="Tiêu đề bài báo" autocomplete="off">
                </div>
                <div class="form-group form-row">
                    <div class="col-7">
                        <label for="lbcat"><i class="fa fa-bars" aria-hidden="true"></i> Danh mục</label>
                        <select class="form-control" id="lbcat" name="CatID" size="auto" style="width:auto;">
                            {{#each cb_categories}}
                            {{#ifEquals ../news.CatID this.CatID}}
                            <option value="{{CatID}}" selected>
                                {{#if CatParent}}
                                {{CatParent}} - {{CatName}}
                                {{else}}
                                {{CatName}}
                                {{/if}}</option>
                            {{else}}
                            <option value="{{this.CatID}}">
                                {{#if CatParent}}
                                {{CatParent}} - {{CatName}}
                                {{else}}
                                {{CatName}}
                                {{/if}}
                            </option>
                            {{/ifEquals}}
                            {{/each}}
                        </select>
                        <div class="row" style="margin-bottom: 10px;">
                            <div class="col-4">
                                <label for="cbbtag" style="margin-top: 20px;"><i class="fa fa-tags"
                                        aria-hidden="true"></i> Thẻ tag</label>
                                <select class="form-control" id="cbbtag" name="tag" size="auto" style="width:auto;">
                                    {{#each tags}}
                                    <option value="{{TagID}}">{{TagName}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-3" style="padding: 1px !important;">
                                <button class="btn btn-success" type="button" id="addTagBtn" style="margin-top: 52px;"
                                    onclick="addTag()"><i class="fa fa-plus" aria-hidden="true"></i> Gắn tag
                                </button>
                            </div>
                        </div>
                        <label for="tag-typer" style="width: 100%;">
                            <div id="tags">
                                {{#each taging}}
                                <span class="tag">
                                    <span class="close-tag">&times;</span>{{TagName}}
                                    <input type="hidden" name="tags[]" value="{{TagID}}">
                                </span>
                                {{/each}}
                                {{!-- <span class="tag">
                                    <span class="close-tag">&times;</span>such tage
                                    <input type="hidden" name="tags[]" value="such tage">
                                </span>
                                <span class="tag"><span class="close-tag">&times;</span>so color</span>
                                <span class="tag"><span class="close-tag">&times;</span>many type</span>
                                <span class="tag"><span class="close-tag">&times;</span>wow</span> --}}
                                <input id="tag-typer" type="text" placeholder="Thêm tag mới.." autocomplete="off" />

                            </div>
                        </label>

                    </div>
                    <div class="col-5">
                        <label for="fuNews" style="width: 100%;"><i class="fa fa-file-image-o" aria-hidden="true"></i>
                            Hình bìa</label>
                        <div class="file-loading">
                            <input id="fuNews" name="fuNews" type="file">
                        </div>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label for="txtTinyDes"><i class="fa fa-comments-o" aria-hidden="true"></i> Nội dung tóm
                        tắt</label>
                    <textarea class="form-control" rows="2" id="txtTinyDes" name="TinyDes">{{news.TinyDes}}</textarea>
                </div>
                <div class="form-group">
                    <label for=""><i class="fa fa-pencil" aria-hidden="true"></i> Nội dung</label>
                    <textarea name="FullDes" id="txtFullDes" class="form-control" cols="30"
                        rows="10">{{{news.FullDes}}}</textarea>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-lg btn-success btn-block">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    Submit
                </button>
                <button type="button" class="btn btn-lg btn-danger btn-block" onclick="history.back()">
                    <i class="fa fa-times" aria-hidden="true"></i>
                    Cancel
                </button>
            </div>
        </div>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script>
    $(document).ready(function () {
        $("#tag-typer").keypress(function (event) {
            var key = event.which;
            if (key == 13 || key == 44) {
                event.preventDefault();
                var tag = $(this).val();

                const isBlank = $.trim(tag);

                if (tag.length > 0 && isBlank != '') {
                    $("<span class='tag''><span class='close-tag'>&times;</span>" +
                        tag + " <input type='hidden' name='newtags[]' value='" + tag + "'>" +
                        " </span>").insertBefore(this);
                    $(this).val("");
                } else
                    $(this).val("");
            }
        });

        $("#tags").on("click", ".close-tag", function () {
            $(this).parent("span").remove();
        });
    });
    function addTag() {
        var selectedTagText = $("#cbbtag").find(":selected").text();
        var selectedTagVal = $("#cbbtag").find(":selected").val();
        $("<span class='tag''><span class='close-tag'>&times;</span>" +
            selectedTagText + " <input type='hidden' name='tags[]'' value=" + selectedTagVal + ">" +
            " </span>").insertBefore($("#tag-typer"));
    }
</script>
