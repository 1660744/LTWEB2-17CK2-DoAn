<div class="container-fluid">
    <div class="row">
        <div class="col-2 bg-dark">
            <ul class="nav nav-pills flex-column sticky-top pt-5 pb-5" id="menu-admin">
                <li class="nav-item"><a class="nav-link" href="/admin">Dash broad</a></li>
               <li class="nav-item">
                    <a class="nav-link collapsed" href="#submenu1" data-toggle="collapse"
                        data-target="#submenu1">Quản
                        lý tài khoản</a>
                    <div class="collapse" id="submenu1" aria-expanded="false">
                       <ul class="flex-column pl-3 nav">
                            <li class="nav-item"><a class="nav-link py-1 " href="/admin/account/list">Danh
                                    Sách tài khoản</a></li>
                            <li class="nav-item"><a class="nav-link py-1 " href="/admin/account/list-premier">Gia hạn người dùng</a></li>
                            <li class="nav-item"><a class="nav-link py-1 " href="/admin/account/list-assign">Phân công bài viết</a></li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item"><a class="nav-link text-muted" href="/admin/category/list">Quản lý danh mục</a></li>
                <li class="nav-item"><a class="nav-link " href="/admin/tags/list">Quản lý nhãn tag</a></li>
                <li class="nav-item"><a class="nav-link" href="/admin/news/list">Quản lý bài viết</a></li>
            </ul>
        </div>
        <div class="col-10">
            <div class="card contain-siz">
                   <h1 class="center mb-5">Quản lý danh mục</h1>
                <div class="card-header d-flex justify-content-center">
                    <h4>Thêm danh mục</h4>
                </div>
                <div class="card-body" style="padding: 0 300px;">
                    <form id="catForm" action="/admin/category/add" method="post">
                        <div class="form-group">
                            <label for="lbcat">
                                Danh mục cha</label>
                            <select class="form-control" id="lbcat" name="parent" size="auto">
                                <option value="-1" selected>Không</option>
                                {{#each catfather}}
                                <option value="{{CatID}}">{{CatName}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="catname">Tên Danh mục</label>
                            <input type="text" class="form-control" name="name" id="catname"
                                onclick="ClearError('err_cat',this)">
                            <small id="err_cat" class="form-text text-danger"></small>
                        </div>
                    </form>
                    <div>
                        <button type="button" class="btn btn-danger float-right mx-2" onclick="history.back()">
                            <i class="fa fa-times" aria-hidden="true"></i>
                            Hủy
                        </button>
                        <button type="button" class="btn btn-info float-right" onclick="Validate_edit_category()">Cập
                            nhật</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{#section 'js'}}
<script src="/javascript/validate.js"></script>
{{/section}}