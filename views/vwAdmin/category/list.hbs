<script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.31.3/js/extras/jquery.tablesorter.pager.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.31.3/js/widgets/widget-filter.min.js"></script>
<script>
    $(function () {
        $("#table1").tablesorter({
            theme: "bootstrap",
            widthFixed: true,
            widgets: ["filter", "columns", "zebra"],
            widgetOptions: {
                zebra: ["even", "odd"],
                columns: ["primary", "secondary", "tertiary"],

                filter_reset: ".reset",

                filter_cssFilter: [
                    'form-control',
                    'form-control',
                    'form-control',
                    'form-control'
                ]
            }
        }).tablesorterPager({
            container: $(".ts-pager1"),
            cssGoto: ".pagenum1",
            removeRows: false,
            output: '{startRow} - {endRow} / {filteredRows} ({totalRows})'
        });
        $("#table2").tablesorter({
            theme: "bootstrap",
            widthFixed: true,
            widgets: ["filter", "columns", "zebra"],
            widgetOptions: {
                zebra: ["even", "odd"],
                columns: ["primary", "secondary", "tertiary"],

                filter_reset: ".reset",

                filter_cssFilter: [
                    'form-control',
                    'form-control',
                    'form-control',
                    'form-control',
                    'form-control'
                ]
            }
        }).tablesorterPager({
            container: $(".ts-pager2"),
            cssGoto: ".pagenum2",
            removeRows: false,
            output: '{startRow} - {endRow} / {filteredRows} ({totalRows})'
        });
    });
</script>
{{/section}}
