                                            <div class="btn-group btn-group-sm mx-1" role="group">
                                                <button type="button" class="btn btn-secondary next"
                                                    title="next">→</button>
                                                <button type="button" class="btn btn-secondary last" title="last">Trang
                                                    cuối</button>
                                            </div>

                                        </div>
                                    </th>
