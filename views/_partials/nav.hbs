<nav class="bg-dark">
    <div class="container">
        <ul id="menu-main">
            {{#each categories}}
            <li><a href="">{{CatName}}</a>
                <div class="menu-sub">
                    {{#each Descendants}}
                    <div><a href="">{{this}}</a></div>
                    {{/each}}
                </div>
            </li>
            {{/each}}
            {{#if isFull}}
            <li><a href="">ThÃªm</a></li>
            {{/if}}

        </ul>
        <div id="search-bar">
            <form id="content" autocomplete="off">
                <input type="text" name="input" class="input" id="search-input">
                <button type="reset" class="search" id="search-btn"></button>
            </form>
        </div>
    </div>
</nav>
<script src="/javascript/date.js"></script>
<script>
    //Date on nav
    document.getElementById("currdate").innerHTML = presentDate();

    //nav search motion effect
    const input = document.getElementById("search-input");
    const searchBtn = document.getElementById("search-btn");
    const categoryNav = document.getElementById("menu-main");
    let check = false;
    const expand = () => {
        if (check == true) {
            categoryNav.classList.add("delay");
            check = false;
        } else {
            categoryNav.classList.remove("delay");
            check = true;
        }
        console.log(check);
        searchBtn.classList.toggle("close-searchbar");
        input.classList.toggle("square");
        categoryNav.classList.toggle("hidden");

    };
    searchBtn.addEventListener("click", expand);
</script>