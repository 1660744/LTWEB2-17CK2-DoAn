<div class="d-flex justify-content-between align-items-center bg-dark top-nav">
    <a class="logo" href="/">
        <img src="/img/logo2.png">
    </a>
    <div class="text-white bold" id="currdate"></div>
    <div class="d-flex justify-content-between align-items-center">
        <div class="search">
            <input type="text" class="searchTerm" placeholder="Tìm kiếm...">
            <button type="submit" class="searchButton">
                <i class="fa fa-search"></i>
            </button>
        </div>
        <a href="#loginModal" data-toggle="modal" class="mr-2">LOGIN</a>
        <a href="#registerModal" data-toggle="modal">REGISTER</a>
    </div>
</div>
<div class="wrapper">
    <div class="mega_menu">
        <ul>{{#each categories}}
            <li><a href="#">{{CatName}}</a>
                {{#if Descendants}}
                <div class="sub_menu d-flex align-content-start flex-wrap text-white">
                    {{#each Descendants}}
                    <div class="subCat-item"><a href="#">{{this}}</a></div>
                    {{/each}}
                </div>
                {{/if}}
            </li>
            {{/each}}
            {{#ifEquals isFull false }}
            <li><a href="">Thêm</a>
                <div class="sub_menu tech">
                    {{#each extras}}
                    <div class="d-flex justify-content-center">
                        <div>
                            <h5><a href="#" style="max-width: 500px;">{{CatName}}</a></h5>
                            {{#each Descendants}}
                            <div class="subExCat">
                                <a href="#">{{this}}</a>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    {{/each}}
                </div>
            </li>
            {{/ifEquals}}
        </ul>
    </div>
</div>

<script src="/javascript/date.js"></script>
<script>
    //Date on nav
    document.getElementById("currdate").innerHTML = presentDate();

</script>
